@page
@model CopiiClinica.Pages.Copii.IndexModel

@{
    ViewData["Title"] = "Copii";
}

<h1>Copii</h1>

<p>
    <a asp-page="Create">Adaugă copil</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Copil[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Copil[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Copil[0].Varsta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Copil) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Varsta)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Editează</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Detalii</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Șterge</a>
            </td>
        </tr>
}
    </tbody>
</table>
