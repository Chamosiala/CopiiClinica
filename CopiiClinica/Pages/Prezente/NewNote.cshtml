@{
    ViewData["Title"] = "NewNote";
}

<h1>Scrie</h1>

<h4>Notiță</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
