@page
@model CopiiClinica.Pages.Prezente.EditNoteModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Modificare</h1>

<h4>Notiță</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Notita.ID" />
            <input type="hidden" asp-for="Notita.PrezentaID" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Notita.Interval" /> @Html.DisplayNameFor(model => model.Notita.Interval)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Notita.Mesaj" /> @Html.DisplayNameFor(model => model.Notita.Mesaj)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Details">Înapoi la detalii</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
