@page
@model CopiiClinica.Pages.Prezente.DetailsModel

@{
    ViewData["Title"] = "Detalii";
}

<h1>Detalii</h1>

<div>
    <h4>Prezenta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prezenta.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prezenta.Data)
        </dd>
        <dt class="col-sm-2">
            <label>Nume Student</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Copil.Nume)
            <label></label>
            @Html.DisplayFor(model => model.Copil.Prenume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prezenta.Prezent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prezenta.Prezent)
        </dd>
        @foreach (var notita in Model.ListaNotite) {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => notita.Interval)
                <a asp-page="./EditNote" asp-route-id="@notita.ID">Modifică</a>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => notita.Interval)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => notita.Mesaj)
            </dt>
            <dd class="col-sm-10 text-break">
                @Html.DisplayFor(model => notita.Mesaj)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Prezenta.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
